@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>URUNLER</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>URUN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIS FIYATI</th>
        <th>SATIS FIYATI</th>
        <th>KATEGORI</th>
        <th>GORSEL</th>
        <th>SİL</th>
        <th>GUNCELLE</th>



    </tr>
    
    @foreach (var p in Model)
    {
        
<tr>
    <td>@p.ProductId</td>
    <td>@p.Name</td>
    <td>@p.Brand</td>
    <td>@p.Stock</td>
    <td>@p.PurchasePrice</td>
    <td>@p.SalePrice</td>
    <td>@p.category.CategoryName</td>
    <td>@p.Image</td>
    <td><a href="/Product/UrunSil/@p.ProductId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Product/UrunGetir/@p.ProductId" class="btn btn-success">Guncelle</a></td>
</tr>
    }
</table>

<a href="/Product/ProductAdd" class="btn btn-info">Yeni Urun</a>


@using MvcOnlineTicariOtomasyon.Models.Entities
@model MvcOnlineTicariOtomasyon.Models.Entities.Cari

@{
    ViewBag.Title = "CariAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<h2>Yeni Cari Ekleme</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.CariName)
    @Html.TextBoxFor(c => c.CariName, new { @class = "form-control" })
    @Html.LabelFor(x => x.CariLastName)
    @Html.TextBoxFor(c => c.CariLastName, new { @class = "form-control" })
    @Html.LabelFor(x => x.CariTitle)
    @Html.TextBoxFor(c => c.CariTitle, new { @class = "form-control" })
    @Html.LabelFor(x => x.CariCity)
    @Html.TextBoxFor(c => c.CariCity, new { @class = "form-control" })
    @Html.LabelFor(x => x.CariMail)
    @Html.TextBoxFor(c => c.CariMail, new { @class = "form-control" })
   
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
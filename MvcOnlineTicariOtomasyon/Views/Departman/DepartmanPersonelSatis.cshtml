@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Personel Satis</h2>
<br />
<div style="background-color: darkgrey">Personel Adı : @ViewBag.dpers</div>


<table class="table table-condensed">
    <tr>

        <th>Satis Id</th>
        <th>Urun</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    
    @foreach (var x in Model)
    {
<tr>

    <td>@x.SatisId</td>
    <td>@x.Product.Name</td>
    <td>@x.Cari.CariName @x.Cari.CariLastName</td>
    <td>@x.Fiyat</td>
    <td>@x.Adet</td>
    <td>@x.ToplamTutar</td>
    <td>@x.Tarih</td>
    <td><a href="#" class="btn btn-default" style="background-color: brown">Yazdır</a></td>
</tr>
    }
   
</table>